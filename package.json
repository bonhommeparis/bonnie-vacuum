{
  "name": "@bonhomme/bonnie-vacuum",
  "version": "1.0.1",
  "description": "BonhommeParis Agent sniffer",
  "main": "lib/index.js",
  "scripts": {
    "build": "BABEL_ENV=production babel src -d lib",
    "docs": "node_modules/.bin/jsdoc --configure jsdoc.json --verbose",
    "docs:deploy": "npm run docs && gh-pages -d docs/ -m 'docs: update'",
    "test": "ava",
    "test:watch": "ava --watch --verbose",
    "test:coverage": "nyc npm test",
    "prepublish": "npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bonhommeparis/bonnie-vacuum.git"
  },
  "bugs": {
    "url": "https://github.com/bonhommeparis/bonnie-vacuum/issues"
  },
  "homepage": "https://github.com/bonhommeparis/bonnie-vacuum",
  "author": "Loup-Rodolphe THIBAULT <loupthibault@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.7.0",
    "browser-env": "^3.2.5",
    "eslint": "^5.4.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "ie >= 11"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "add-module-exports"
    ],
    "ignore": "test.js"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "require": [
      "babel-core/register",
      "./test/helpers/setup-browser-env.js"
    ]
  }
}
